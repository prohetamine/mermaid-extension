{
  "name": "Mermaid Extension",
  "description": "Automated webcam chat reading and routing between devices and servers. Developer: https://prohetamine.ru made with ❤️",
  "version": "1.1.1",
  "manifest_version": 2,
  "background": {
    "persistent": true,
    "scripts": ["src/background.js"]
  },
  "browser_action": {
    "default_icon": "icons/icon16.png",
    "default_popup": "src/popup/index.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "<all_urls>",
    "webRequest",
    "webRequestBlocking",
    "extraInfoSpec"
  ],
  "content_scripts": [
    {
      "run_at": "document_start",
      "matches": ["https://chaturbate.com/*", "https://*.chaturbate.com/*"],
      "js": ["src/socket.io.js", "src/webcam-sites/chaturbate-script.js"]
    },
    {
      "run_at": "document_start",
      "matches": ["https://mywebcamroom.com/*", "https://*.stripchat.com/*", "https://stripchat.com/*"],
      "js": ["src/socket.io.js", "src/webcam-sites/stripchat-script.js"]
    }
  ]
}
