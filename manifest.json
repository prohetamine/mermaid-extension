{
  "name": "Mermaid Extension",
  "description": "Automated webcam chat reading and routing between devices and servers. Developer: https://prohetamine.ru made with ❤️",
  "version": "0.0.1",
  "manifest_version": 3,
  "background": {
    "service_worker": "src/background.js"
  },
  "action": {
    "default_popup": "src/popup/index.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://chaturbate.com/b/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://chaturbate.com/b/*"],
      "js": ["src/webcam-sites/chaturbate-script.js"]
    }
  ]
}
