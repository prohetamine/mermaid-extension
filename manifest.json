{
  "name": "Mermaid Extension",
  "description": "Automated webcam chat reading and routing between devices and servers. Developer: https://prohetamine.ru made with ❤️",
  "version": "1.3.1",
  "manifest_version": 2,
  "background": {
    "persistent": true,
    "scripts": [
      "src/libs/base64.js",
      "src/libs/sleep.js",
      "src/libs/replace-value-by-value.js",
      "src/libs/if-parser.js",
      "src/libs/replacement-request.js",
      "src/background.js"
    ]
  },
  "browser_action": {
    "default_icon": "icons/icon16.png",
    "default_popup": "src/popup/index.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "<all_urls>",
    "webRequest",
    "webRequestBlocking",
    "extraInfoSpec"
  ],
  "content_scripts": [
    {
      "run_at": "document_start",
      "matches": ["<all_urls>"],
      "js": [
        "src/libs/sleep.js",
        "src/libs/md5.js",
        "src/libs/socket.io.js",
        "src/webcam-sites/chaturbate-script.js",
        "src/webcam-sites/stripchat-xhamster-script.js",
        "src/webcam-sites/bongacams-script.js"
      ]
    }
  ]
}
